{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowJs": false,
		"jsx": "react",
		"jsxFactory": "createElement",
		"outDir": "./dist/",
		"experimentalDecorators": true,
		"strict": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
